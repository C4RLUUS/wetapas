<%- include("templates/head", {titulo: "SingUp | Wetapas"}) %> 
<link rel="stylesheet" href="../public/css/views/signup.css">
</head>
<body>
    <%- include("templates/cabecera") %> 
    <main class="main">

        <img src="../public/img/signUp-img.jpg" alt="" srcset="" class="signUp-img">

        <div class="box">
            <div class="form-box d-flex justify-content-center flex-column"> 
                <h1 class="form-title">Registro</h1>
            
                <form action="/signup" method="post" class="form-input">
                    <div class="d-flex justify-content-center gap-1 flex-column mx-5">
                        <label for="name">Nombre*</label>
                        <input type="text" name="firstName" id="name" class="inputs" required>
                    </div>
                    <div class="d-flex justify-content-center gap-1 flex-column mx-5">
                        <label for="apellido">Apellidos*</label>
                        <input type="text" name="lastName" id="apellido" class="inputs" required>
                    </div>
                    <div class="d-flex justify-content-center gap-1 flex-column mx-5">
                        <label for="email">Email*</label>
                        <input type="email" name="email" id="email" class="inputs" required>
                    </div>
                    <div class="d-flex justify-content-center gap-1 flex-column mx-5">
                        <label for="pass">Contrase√±a*</label>
                        <input type="password" name="password" id="pass" class="inputs" required>
                    </div>
                    <div class="d-flex justify-content-center gap-1 flex-column mx-5">
                        <label for="tel">Telefono*</label>
                        <input type="number" name="telefono" id="tel" placeholder="+34" class="inputs" required>
                    </div>
                    <% if(this.mensaje == true) {%> 
                    <p><%= mensaje %></p>
                    <% } %> 
                    
                    <button type="submit" class="btn-submit mb-4 mx-auto">Enviar</button>
                </form>
            </div>
        </div>
    </main>

    <% if(locals.error) {%> 
        <div class="alert alert-danger alerta" role="alert" id="alert">
            <%= error %> 
        </div>
    <% } %> 

    <%- include("templates/footer") %> 
    <script src="../../public/js/menu-cabecera.js"></script>
    <script src="../public/js/alerts.js"></script>
</body>