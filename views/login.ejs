<%- include("templates/head", {titulo: "Login | Wetapas"}) %> 
<link rel="stylesheet" href="../public/css/views/login.css">
</head>
<body>
    <%if(locals.totalItems){ %>
        <%- include("templates/cabecera", {totalItems}) %>
    <% } else if (!locals.totalItems) { %>
        <%- include("templates/cabecera") %> 
    <% } %>
    <main class="main">
        <img src="../public/img/login-img.jpg" alt="" srcset="" class="login-img">

        
       
        <div class="box"> 
            <div class="form-box d-flex justify-content-center flex-column">
                <h1 class="form-title">Login</h1>
                        
                    <form action="/login" method="post" class="form-input">
                            <div class="d-flex justify-content-center gap-1 flex-column mx-5">
                                <label for="email" class="form-label">Email*</label>
                                <input type="email" name="email" id="email" class="inputs" required>
                            </div>
                            <div class="d-flex justify-content-center gap-1 flex-column mx-5">
                                <label for="password" class="form-label">Password*</label>
                                <input type="password" name="password" id="password" class="inputs" required>
                            </div>
                            <button type="submit" class="btn-submit mb-4 mx-auto">Enviar</button>
                        </form>
                    </div>
                </div>

        
    </main>
    <% if(locals.error) {%> 
        <div class="alert alert-danger alerta" role="alert" id="alert">
            <%= error %> 
        </div>
    <% } %> 

    <%- include("templates/footer") %> 
    <script src="../../public/js/menu-cabecera.js"></script>
    <script src="../public/js/alerts.js"></script>

</body>